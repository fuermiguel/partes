<?xml version="1.0" encoding="UTF-8"?>
<!--vista del parte de balizamiento. El modelo es único 
usando herencia múltiple-->
<openerp>
    <data>
    	<record model="ir.ui.view" id="view_circuitos_tree">
            <field name="name">circuitos.tree</field>
            <field name="model">partes.circuitos</field>
            <field name="arch" type="xml">
                <tree string="Listado de circuitos">
                   	<field name="nombreCircuito"/>
             
                </tree>
            </field>
        </record>
	<record model="ir.ui.view" id="view_circuitos_form">
		<field name="name">grupos.form</field>
		<field name="model">partes.circuitos</field>
		<field name="arch" type="xml">
			<form string="formulario de circuitos">	
				<sheet>
					<group>
						<field name="nombreCircuito"/>
						<field name="id_grupo"/>
						<field name="id_apagadas"/>
					</group>
				</sheet>								
			</form>
		</field>
	</record>
	

	<record model="ir.actions.act_window" id="circuitos_list_action">
		<field name="name">Circuitos</field>
		<field name="res_model">partes.circuitos</field>
		<field name="view_type">form</field>
		<field name="view_mode">tree,form</field>
	</record>
	
	
	
	<menuitem id="main_partes_menu" name="Partes diarios"/>
	<menuitem id="partes_menu" name="partes diarios" parent="main_partes_menu"/>
	<menuitem id="partes_configuracion_menu" name="configuracion" parent="main_partes_menu"/>
	<menuitem id="partes_configuracion_circuitos_menu" name="Circuitos" parent="partes_configuracion_menu" action="circuitos_list_action"/>
    </data>
</openerp>